{
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@components/*": ["src/components/web/*"],
    },
    "declaration": false,
    "noResolve": false,
    "jsx": "react",
    "jsxFactory": "RX.createElement",
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "./dist/",
    "strict": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*"
  ]
}
